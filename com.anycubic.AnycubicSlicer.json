{
  "id": "com.anycubic.AnycubicSlicer",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "anycubic-slicer-wrapper",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--share=network",
    "--device=all",
    "--filesystem=home",
    "--filesystem=xdg-run/gvfs",
    "--filesystem=/run/media",
    "--filesystem=/media",
    "--socket=session-bus",
    "--talk-name=org.freedesktop.Avahi",
    "--system-talk-name=org.freedesktop.Avahi"
  ],
  "modules": [
    {
      "name": "anycubic-slicer",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "file",
          "path": "https://cdn-universe-slicer.anycubic.com/prod/pool/main/a/anycubicslicernext/anycubicslicernext_1.3.7171_amd64.deb",
          "sha256": "67858994781498863f6991199341c305a465053648679f298836371715423871",
	  "dest-filename": "anycubic.deb"
        },
        {
          "type": "file",
          "path": "anycubic-slicer-wrapper.sh",
          "dest-filename": "anycubic-slicer-wrapper"
        }
      ],
      "build-commands": [
        "ar x anycubic.deb",
        "tar xf data.tar.gz || tar xf data.tar.xz",
        "cp -r usr/* /app/",
        "mkdir -p /app/share/AnycubicSlicerNext",
        "cp -r /app/share/AnycubicSlicerNext/resources /app/resources || true",
        "install -Dm755 anycubic-slicer-wrapper /app/bin/anycubic-slicer-wrapper",
        "install -Dm644 /app/share/applications/AnycubicSlicer.desktop /app/share/applications/com.anycubic.AnycubicSlicer.desktop",
        "sed -i 's/Icon=.*/Icon=com.anycubic.AnycubicSlicer/' /app/share/applications/com.anycubic.AnycubicSlicer.desktop",
        "sed -i 's/Exec=.*/Exec=anycubic-slicer-wrapper %U/' /app/share/applications/com.anycubic.AnycubicSlicer.desktop",
        "install -Dm644 /app/share/AnycubicSlicerNext/resources/images/AnycubicSlicer_192px.png /app/share/icons/hicolor/192x192/apps/com.anycubic.AnycubicSlicer.png"
      ]
    }
  ]
}
